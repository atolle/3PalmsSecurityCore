@{
    ViewData["Title"] = "Home Page";
}

<section class="block">
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img src="~/images/door-green-closed-lock-resized.jpg" alt="Package Management" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <h3>Integrity</h3>
                    <p>Description of integrity.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/grey-cameras-resized.jpeg" alt="ASP.NET" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <h3>Security</h3>
                    <p>Description of security.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/servers.jpeg" alt="Microsoft Azure" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <h3>Service</h3>
                    <p>Description of service.</p>
                </div>
            </div>
        </div>
        <a class="carousel-item-left carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-item-right carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>
<section class="block">
    <div class="solutions">

    </div>
</section>



